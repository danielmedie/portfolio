---
import BackButton from "../components/BackButton.astro";
---

<html>
  <head>
    <title>Contact - Daniel Ek</title>
    <meta charset="UTF-8">
    <script type="text/javascript" src="https://cdn.emailjs.com/dist/email.min.js"></script>
    <script type="text/javascript">
      (function() {
        emailjs.init("e10bZVo4wUqJTZTz4"); 
      })();
    </script>
  </head>
  <body class="bg-teal-50">
    <BackButton />      
    <div class="container mx-auto py-12">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold mb-4">Contact Me</h1>
        <p class="text-lg text-gray-600">Fill out the form below to send me a message. I will get back to you as soon as I can!</p>
      </div>
      <div class="bg-white p-8 shadow-lg rounded-lg max-w-lg mx-auto">
        <form id="contactForm" class="space-y-6">
          <div>
            <label for="from_name" class="block text-lg font-semibold text-gray-700">Name</label>
            <input id="from_name" name="from_name" type="text" class="mt-2 p-3 block w-full border border-gray-300 rounded-md" required />
          </div>
          <div>
            <label for="email" class="block text-lg font-semibold text-gray-700">Email</label>
            <input id="email" name="email" type="email" class="mt-2 p-3 block w-full border border-gray-300 rounded-md" required />
          </div>
          <div>
            <label for="message" class="block text-lg font-semibold text-gray-700">Message</label>
            <textarea id="message" name="message" rows="5" class="mt-2 p-3 block w-full border border-gray-300 rounded-md" required></textarea>
          </div>
          <button type="submit" class="w-full py-3 bg-indigo-600 text-white font-semibold rounded-md shadow-lg hover:bg-indigo-700">
            Send
          </button>
        </form>
      </div>
    </div>
    <script type="module" src="/contact.js"></script>
  </body>
</html>
